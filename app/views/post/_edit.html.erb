<div class="container p-3">
  <h3 class="text-center"><%= local_assigns[:action_title] %></h3>
  <%= form_with model: @posts, method: local_assigns[:method] do |form| %>

    <div class="input-group mb-3">
        <span class="input-group-text" style="width: 60px"><%= form.label :title, "Title" %></span>
      <%= form.text_field :title, class: "form-control", value: @post&.title, required: true %>
    </div>


    <div class="input-group">
        <span class="input-group-text" style="width: 60px"><%= form.label :body, "Body" %></span>
      <%= form.text_area :body, class: "form-control", rows: "10", "aria-label": 'Body', value: @post&.body, required: true %>
    </div>

    <div class="container text-center p-3">
      <%= form.button local_assigns[:submit_bnt_name], class: "btn btn-primary" %>
      <%= link_to "Cancel", { controller: "post", action: "index" }, type:"button", class: "btn btn-outline-danger"%>
    </div>
  <% end %>

</div>
